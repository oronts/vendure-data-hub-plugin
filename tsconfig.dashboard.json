{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "composite": true,
    "target": "es2020",
    "outDir": "./dist/dashboard",
    "rootDir": "./dashboard",
    "lib": ["es2020", "dom", "dom.iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/gql": ["./dashboard/gql/index.ts"],
      "@/vdb/*": ["../../node_modules/@vendure/dashboard/src/lib/*"],
      "@/*": ["./dashboard/*"]
    }
  },
  "include": ["./dashboard/**/*"]
}
